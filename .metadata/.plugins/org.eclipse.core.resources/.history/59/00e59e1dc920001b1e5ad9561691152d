#include <stdio.h>
#include <stdlib.h>

int main(void) {
char x[10],i,*ptr,j;
printf("input a string");
fflush(stdout);
scanf("%s",x);
for (i=0 ; i<=10;i++)
	if (x[i]=='\0')
	{
		ptr = &x[i-1];
		break;

	}
for (i=0 ; i<=10;i++)
{
printf("%c",*ptr);
ptr--;
}
	return 0;
}
