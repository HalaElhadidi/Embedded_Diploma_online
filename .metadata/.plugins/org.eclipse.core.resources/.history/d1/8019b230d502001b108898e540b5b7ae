#include <stdio.h>
#include <stdlib.h>

int main(void) {
	float x;
	printf("enter num");
	fflush(stdout);
	scanf("%f",&x);
	if (x == 0)
	printf("num is the zero");

	if((int)x&(1<<7)== 1)
	{
		printf("num is negative");
	}
	else
		printf("num is positive");
	return 0;
}

