#include <stdio.h>
#include <stdlib.h>

int main(void) {
	char x [5],i,*ptr;
	printf("Input 5 number of elements in the array :");
	fflush(stdout);
	for (i=4;i>=0;i--)
	scanf("%d",&x[i]);
	ptr = &x[4];
	for (i=4;i>=0;i--)
	{
		printf("%d",*ptr);
		ptr--;
	}
	return 0;
}
