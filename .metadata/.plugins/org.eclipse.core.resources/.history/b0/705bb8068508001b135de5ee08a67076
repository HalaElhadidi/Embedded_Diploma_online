#include <stdio.h>
#include <stdlib.h>
#define size 10
int main(void) {
	char x[size],n;
	int i,j=0;
	printf("enter a string");
	fflush(stdout);
	for (i=0;x[i]!='\0';i++)
	{
		scanf("%c",&x[i]);
	}
	printf("%c",x[i]);
	printf("enter char");
	fflush(stdout);
	scanf("%c",&n);

	for (i=0;x[i]!='\0';i++)
	{
	if (n == x[i])
	{
		j=j+1;
	}
	printf("%d",j);
	}
	return 0;
}

