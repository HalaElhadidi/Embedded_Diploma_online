#include <stdio.h>
#include <stdlib.h>

int main(void) {
	char x;
	printf("enter num");
	fflush(stdout);
	scanf("%d",&x);

    while(x& ~(1<<7))
    {
    	printf("-ve");
    }
    else if  (x&(1<<7) == 0b00000000)
    {
    	printf("+ve");
    }
    else if (x == 0)
    {
    	printf("zero");
    }

	return 0;
}

