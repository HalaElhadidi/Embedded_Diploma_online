#include <stdio.h>
#include <stdlib.h>
void reverse (void)
{
	char x[20];
	printf("enter sentence");
	scanf("%c",x);
	if (x != '\n')
	{
		reverse();
		printf("%c",x);
	}
}
int main(void) {

	reverse(x);
	return 0;
}
