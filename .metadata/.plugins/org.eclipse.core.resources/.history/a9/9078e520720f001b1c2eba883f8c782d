#include <stdio.h>
#include <stdlib.h>
char reverse (char *ptr)
{
	if (ptr != '\n')
	{
		reverse();
		printf("%c",ptr);
	}
}
int main(void) {
	char x[20];
	printf("enter sentence");
	scanf("%c",x);
	reverse(x);
	return 0;
}
