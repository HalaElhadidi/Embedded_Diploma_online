#include <stdio.h>
#include <stdlib.h>
#define row 10
#define col 10
int main(void) {
	int x[row][col];
	int y[row][col];
	int i,j,ROW,COL;
	printf("enter the matrix size");
	fflush(stdout);
	scanf("%d %d",&ROW,&COL);
	while(ROW>row && COL>col)
	{
		printf("ERROR!!! and try again");
			fflush(stdout);
			scanf("%d %d",&ROW,&COL);
	}
	printf("enter the matrix ");
	fflush(stdout);
	for(i=0;i<ROW;i++)
	{
		for(j=0;j<COL;j++)
		{
			scanf("%d",&x[i][j]);
		}

	}
	printf("matrix is \n");
	for(i=0;i<ROW;i++)
	{
		for(j=0;j<COL;j++)
		{
			printf(" %d",x[i][j]);
			if(j==1)
			 printf("\n");
		}

	}
	printf("transported matrix is \n");
	for(j=0;j<COL;j++)
	{
		for(i=0;i<ROW;i++)
		{
			y[j][i]=x[i][j];
			printf("%d",y[j][i]);
			if(i==1)
			 printf("\n");
		}

	}
	return 0;
}
